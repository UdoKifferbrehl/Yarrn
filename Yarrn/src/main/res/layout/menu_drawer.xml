<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/right_drawer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/custom_header_color_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/menu_my_projects"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/projects"
            android:text="@string/menu_my_projects" />

        <TextView
            android:id="@+id/menu_my_favorites"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/favorites"
            android:text="@string/menu_my_favorites" />

        <TextView
            android:id="@+id/menu_my_stashes"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/stashes"
            android:text="@string/menu_my_stashes" />

        <TextView
            android:id="@+id/menu_my_queues"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/queues"
            android:text="@string/menu_my_queues" />

        <TextView
            android:id="@+id/menu_project_search"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/projectsearch"
            android:text="@string/menu_project_search" />

        <TextView
            android:id="@+id/menu_pattern_search"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/patternsearch"
            android:text="@string/menu_pattern_search" />

        <TextView
            android:id="@+id/menu_stash_search"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/stashsearch"
            android:text="@string/menu_stash_search" />

        <View style="@style/divider_line" />

        <TextView
            android:id="@+id/menu_open_ravelry"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/ravelry"
            android:text="@string/menu_open_ravelry" />

        <TextView
            android:id="@+id/menu_settings"
            style="@style/menu_entry"
            android:drawableLeft="@drawable/settings"
            android:text="@string/menu_open_settings" />

    </LinearLayout>

</ScrollView>
